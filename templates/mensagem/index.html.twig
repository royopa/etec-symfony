{% extends 'base.html.twig' %}

{% block title %}Mensagem index{% endblock %}

{% block body %}
    <h1>Mensagem index</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>TopicName</th>
                <th>TopicValue</th>
                <th>CreatedAt</th>                
            </tr>
        </thead>
        <tbody>
        {% for mensagem in mensagems %}
            <tr>
                <td>{{ mensagem.id }}</td>
                <td>{{ mensagem.topicName }}</td>
                <td>{{ mensagem.topicValue }}</td>
                <td>{{ mensagem.createdAt ? mensagem.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mensagem_new') }}">Create new</a>
{% endblock %}
