{% extends 'base.html.twig' %}

{% block title %}Sensores{% endblock %}

{% block body %}
  <h1>Lista de Sensores</h1>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Tópico</th>
        <th>Data de criação</th>
        <th>Última alteração</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for sensor in sensors %}
        <tr>
          <td>
            <a href="{{ path('sensor_show', {'id': sensor.id}) }}">{{ sensor.id }}</a>
          </td>
          <td>{{ sensor.nome }}</td>
          <td>{{ sensor.topicName }}</td>
          <td>{{ sensor.createdAt ? sensor.createdAt|date('d/m/Y H:i:s') : '' }}</td>
          <td>{{ sensor.updatedAt ? sensor.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
          <td>
            <a href="{{ path('sensor_edit', {'id': sensor.id}) }}">editar</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="btn btn-default" href="{{ path('sensor_new') }}">Novo sensor</a>
{% endblock %}
