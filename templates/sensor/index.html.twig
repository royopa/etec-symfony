{% extends 'base.html.twig' %}

{% block title %}Sensor index{% endblock %}

{% block body %}
    <h1>Sensor index</h1>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>TopicName</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sensor in sensors %}
            <tr>
                <td>{{ sensor.id }}</td>
                <td>{{ sensor.nome }}</td>
                <td>{{ sensor.topicName }}</td>
                <td>{{ sensor.createdAt ? sensor.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ sensor.updatedAt ? sensor.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('sensor_show', {'id': sensor.id}) }}">show</a>
                    <a href="{{ path('sensor_edit', {'id': sensor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sensor_new') }}">Create new</a>
{% endblock %}
